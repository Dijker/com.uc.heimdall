{
	"id": "com.uc.heimdall",
	"sdk": 2,
	"permissions": [ "homey:manager:api" ],
	"name": { "en": "Heimdall"},
	"description": { "en": "This app turns homey into a simple surveillance system" },
	"category": [ "security", "tools" ],
	"images": { "large": "assets/images/large.png", "small": "assets/images/small.png" },
	"version": "0.0.5",
	"compatibility": "1.x >=1.5.0",
	"author": { "name": "Danee de Kruyff", "email": "daneedekruyff@outlook.com" },
	"contributors": {
		"developers": [{"name": "Danee de Kruyff","email": "daneedekruyff@outlook.com"}]
	},
	"tags": { "en": [ "Alarm", "Tools"] },
	"flow": {
		"triggers": [{
			"id": "Alarm_Activated",
			"title": {
				"en": "The alarm is activated.",
				"nl": "Het alarm is geactiveerd."
			},
			"tokens": [
				{
					"name": "Reason",
					"type": "string",
					"title": {
						"en": "Reason",
						"nl": "Reden"
					},
					"example": "-"
				}
			]
		},
		{
			"id": "Surveillance_Activated",
			"title": {
				"en": "Surveillance is activated.",
				"nl": "Toezicht is geactiveerd."
			}
		},
		{
			"id": "Surveillance_Deactivated",
			"title": {
				"en": "Surveillance is deactivated.",
				"nl": "Toezicht is gedeactiveerd."
			}
		}
		],
		"conditions": [{
			"id": "SurveillanceActivated",
			"title": {
				"en": "!{{Surveillance mode active|Surveillance mode not active}}",
				"nl": "!{{Toezicht mode is actief|Toezicht mode is niet actief}}"
			}
		}
		],
		"actions": [{
			"id": "Send_Info",
			"title": {
				"en": "Send information to Heimdall.",
				"nl": "Stuur informatie naar Heimdall."
			},
			"args": [{
				"name": "log",
				"type": "text"
			}]
		},
		{
			"id": "Clear_Log",
			"title": {
				"en": "Clear Heimdall log data.",
				"nl": "Verwijder Heimdall log gegevens."
			}
		},
		{
			"id": "Activate_Surveillance",
			"title": {
				"en": "Activate Surveillance",
				"nl": "Activeer toezicht"
			}
		},
		{
			"id": "Deactivate_Surveillance",
			"title": {
				"en": "Deactivate Surveillance",
				"nl": "Deactiveer toezicht"
			}
		},
		{
			"id": "Activate_Alarm",
			"title": {
				"en": "Activate Alarm",
				"nl": "Activeer Alarm"
			}
		},
		{
			"id": "Deactivate_Alarm",
			"title": {
				"en": "Deactivate Alarm",
				"nl": "Deactiveer Alarm"
			}
		}

		]
	},
	"drivers": [
		{
			"id": "surveillanceModeSwitch",
			"name": {
				"en": "Mode",
				"nl": "Modus"
				},
			"images": {
				"large": "drivers/surveillanceModeSwitch/assets/images/large.png",
				"small": "drivers/surveillanceModeSwitch/assets/images/small.png"
			},
			"class": "other",
			"capabilities": [ "onoff" ],
			"pair": [
				{
					"id": "list_triggers",
					"template": "list_devices",
					"navigation": {
						"next": "add_triggers"
					}
				},
				{
					"id": "add_triggers",
					"template": "add_devices"
				}
				],
			"mobile": {
				"components": [
					{
					"id": "icon",
					"capabilities": [
						"onoff"
					]
					},
					{
					"id": "toggle",
					"capabilities": [
						"onoff"
					]
					}
				]
			}
		}
	]
}