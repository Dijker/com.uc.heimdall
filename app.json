{
	"id": "com.uc.heimdall",
	"sdk": 2,
	"permissions": [ "homey:manager:api" ],
	"name": { "en": "Heimdall"},
	"description": { "en": "This app turns homey into a simple surveillance system" },
	"category": [ "security", "tools" ],
	"images": { "large": "assets/images/large.png", "small": "assets/images/small.png" },
	"version": "0.0.10",
	"compatibility": "1.x >=1.5.0",
	"author": { "name": "Danee de Kruyff", "email": "daneedekruyff@outlook.com" },
	"contributors": {
		"developers": [{"name": "Danee de Kruyff","email": "daneedekruyff@outlook.com"}]
	},
	"contributing": {
		"donate": {
		  "paypal": {
			"username": "daneedekruyff",
			"currency": "EUR"
		  }
		}
	  },
	"tags": { 
		"en": [ "Alarm", "Tools", "Log", "Surveillance"],
		"nl": [ "Alarm", "Beveiliging", "Toezicht"] 
	},
	"flow": {
		"triggers": [{
			"id": "Alarm_Activated",
			"title": {
				"en": "The alarm is activated.",
				"nl": "Het alarm is geactiveerd."
			},
			"tokens": [
				{
					"name": "Reason",
					"type": "string",
					"title": {
						"en": "Reason",
						"nl": "Reden"
					},
					"example": "-"
				}
			]
		},
		{
			"id": "Delay_Activated",
			"title": {
				"en": "The delay is activated.",
				"nl": "Het vertraging is geactiveerd."
			},
			"tokens": [
				{
					"name": "Reason",
					"type": "string",
					"title": {
						"en": "Reason",
						"nl": "Reden"
					},
					"example": "-"
				},
				{
					"name": "Duration",
					"type": "number",
					"title": {
						"en": "Duration",
						"nl": "Duur"
					},
					"example": 30
				}
			]
		},
		{
			"id": "TimeTillAlarm",
			"title":{
				"en": "The time untill alarm changed",
				"nl": "De tijd tot alarm wijzigd"
			},
			"tokens": [
				{
					"name": "AlarmTimer",
					"type": "number",
					"title": {
						"en": "Seconds untill alarm",
						"nl": "Seconden tot alarm"
					},
					"example": 30
				}
			]
		}
		],
		"actions": [{
			"id": "Send_Info",
			"title": {
				"en": "Send information to Heimdall.",
				"nl": "Stuur informatie naar Heimdall."
			},
			"args": [{
				"name": "log",
				"type": "text"
			}]
		},
		{
			"id": "Clear_Log",
			"title": {
				"en": "Clear Heimdall log data.",
				"nl": "Verwijder Heimdall log gegevens."
			}
		},
		{
			"id": "Activate_Alarm",
			"title": {
				"en": "Activate Alarm",
				"nl": "Activeer Alarm"
			}
		},
		{
			"id": "Deactivate_Alarm",
			"title": {
				"en": "Deactivate Alarm",
				"nl": "Deactiveer Alarm"
			}
		}
		]
	},
	"drivers": [
		{
			"id": "surveillanceModeSwitch",
			"name": {
				"en": "Mode",
				"nl": "Modus"
				},
			"images": {
				"large": "drivers/surveillanceModeSwitch/assets/images/large.png",
				"small": "drivers/surveillanceModeSwitch/assets/images/small.png"
			},
			"class": "homealarm",
			"capabilities": [ "homealarm_state" ],
			"pair": [
				{
					"id": "list_triggers",
					"template": "list_devices",
					"navigation": {
						"next": "add_triggers"
					}
				},
				{
					"id": "add_triggers",
					"template": "add_devices"
				}
			]
		},
		{
			"id": "alarmOffSwitch",
			"name": {
				"en": "Alarm",
				"nl": "Alarm"
			},
			"images": {
				"large": "drivers/alarmOffSwitch/assets/images/large.png",
				"small": "drivers/alarmOffSwitch/assets/images/small.png"
			},
			"class": "other",
			"capabilities": [ "button", "onoff" ],
			"capabilitiesOptions":  {
				"button": {
					"title":{
						"en": "Turn off",
						"nl": "Schakel uit"
					}
				}
			},
			"pair": [
				{
					"id": "list_triggers",
					"template": "list_devices",
					"navigation": {
						"next": "add_triggers"
					}
				},
				{
					"id": "add_triggers",
					"template": "add_devices"
				}
			],
			"mobile": {
				"components": [
					{
						"id": "icon",
						"capabilities": [ ]
					},
					{
						"id": "button",
						"capabilities": [ "button" ]
					}
				]
			}

		}

	]
}